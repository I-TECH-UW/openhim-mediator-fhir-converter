{
  "compilerOptions": {
    "target": "es6",                          
    "module": "commonjs",                     
    "allowJs": false,                      

    "strict": true,                           
    "noImplicitAny": true,                 
    "moduleResolution": "node",
    "baseUrl": "./test/unit",
    "paths": {
      "*": [
          "node_modules/*"
        ]
    },                       
    "allowSyntheticDefaultImports": true,  
    "esModuleInterop": true,      
    "resolveJsonModule": true           
}
}